{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-compose",
            "label": "docker-compose: debug up",
            "dockerCompose": {
                "up": {
                    "detached": true,
                    "build": true,
                },
                "files": [
                    "${workspaceFolder}/docker-compose.yml",
                    "${workspaceFolder}/docker-compose.debug.yml"
                ]
            },
        },
        {
            "label": "docker-compose: debug down",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "${workspaceFolder}/docker-compose.debug.yml",
                "down"
            ],
            "problemMatcher": []
        },
    ]
}